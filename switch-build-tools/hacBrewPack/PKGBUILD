
# Maintainer: eXhumer <eXhumer@member.fsf.org>
pkgname=hacBrewPack
pkgdesc='Make NCAs/NSPs from Nintendo Switch homebrews'
pkgrel=1
pkgver=3.05
arch=('x86_64')
url='https://github.com/The-4n/${pkgname}.git'
license=('GPLv2')
makedepends=('gcc' 'make')
source=("https://github.com/The-4n/${pkgname}/archive/v${pkgver}.tar.gz")

sha256sums=('9b5cb51e8e8a53d20d0e7d4518d82c99012eb40545d45b4f8edaa9786670e0ec')
sha512sums=('0e3dc4e33e8485ef67690e4ad3656b42c4beeb642287502e335059653f5e0051db709884d204833c89e9d70ea804e3e3e99283744a9e2585ce85674b291ba13e')

build() {
	cd ${pkgname}-${pkgver}
	cp config.mk.template config.mk
	make
}

package() {
	cd ${pkgname}-${pkgver}
	[ -d $pkgdir/usr/bin/ ] || mkdir -p $pkgdir/usr/bin/
	cp hacbrewpack $pkgdir/usr/bin/
}
